<div id='opening-page' class='pages'>
  <div class="hero-unit">
    <ul class="thumbnails">
      <li class="span7 thumbnail opening-pic">
        <%= image_tag('opening1.jpg') %>
      </li>
      <div class="span4">
        <h2 class="text-center">Рабочие часы</h2>
        <% @opening.each do |o| %>
          <h4>
            <%= o.opening_day %>:
        <span class="pull-right">
            <%= o.opening_from.present? ? o.opening_from + '-' + o.opening_to : 'Выходной' %>
        </span>
          </h4>
        <% end %>
      </div>
    </ul>
  </div>
</div>