<div id="portfolio-page" class="pages">
  <div id="portfolio" class="text-center">
        <% portfolios = Dir[File.join('app/assets/images/portfolio', '**', '*')].count { |file| File.file?(file) } / 2 %>
        <% unless portfolios == 0 %>
        <div class="row">
          <% for i in 1..portfolios %>
          <div class="art span4">
            <a href="<%= asset_path('portfolio' + i.to_s + '.jpg') %>"><img class="img-polaroid" src="<%= asset_path('portfolio' + i.to_s + '_small.jpg') %>" alt="portfolio image" /></a>
          </div>
          <% end %>
        </div>
        <% else %>
            <div class="well">There are no portfolio yet. Coming soon...</div>
        <% end %>
  </div>
</div>

<script type="text/javascript">
  $(window).load(function(){
      $('.row').isotope({
          itemSelector : '.art'
      });
  });
</script>