<div id='user-page' class='pages'>
  <div class="row">
    <div class="span5">
      <%= image_tag @user.picture :large %>
    </div>
    <div class="span7">
      <h3><%= @user.first_name + ' ' + @user.last_name %></h3>
      <h4><%= @user.title %></h4>
      <p><%= raw @user.about %></p>
    </div>
  </div>
</div>