<div id="course-page">
  <div class="row-fluid">
    <div class="span12">
      <div class="hero-unit">
        <h2 class="text-center"><%= @course.name %></h2>
        <% if @course.picture.present? %>
            <ul class="thumbnails">
              <li class="thumbnail">
                <!-- Image tag -->
              </li>
              <p><%= raw @course.description %></p>
            </ul>
        <% else %>
            <p><%= raw @course.description %></p>
        <% end %>
        <% if @course.course_blocks.present? %>
            <h2 class="text-center">Виды курса</h2>
            <% @course.course_blocks.each do |block| %>
                <%= raw "<h3 class='text-center'>#{block.name}</h3>" %><br>
                <% text = block.text.split(';') %>
                <ul>
                  <% text.each do |list_item| %>
                      <li style="list-style-type: disc"><%= list_item %></li>
                  <% end %>
                </ul>
                <hr>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>